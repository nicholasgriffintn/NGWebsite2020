{
  "name": "nicholas-griffin-personal-website",
  "version": "0.0.1",
  "description": "A website that's just for me.",
  "author": "Nicholas Griffin <me@nicholasgriffin.co.uk>",
  "main": "server/server.js",
  "scripts": {
    "test": "echo 'Running Standard.js and Jasmine unit tests...\n' && yarn lint && yarn unit",
    "unit": "jasmine",
    "lint": "standard",
    "fix": "standard --fix",
    "dev": "echo 'Running as Express server'; nodemon -w server -w graphql -w package.json server/server.js",
    "now": "echo 'Running as Zeit Now serverless'; now dev --listen 3123",
    "deploy": "now --prod",
    "start": "NODE_ENV=production node server/server.js",
    "build": "next build",
    "build:production": "npm install && next build",
    "heroku-postbuild": "next build"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      ".next/",
      "next.config.js"
    ],
    "globals": [
      "describe",
      "expect",
      "it"
    ]
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@apollo/react-ssr": "^3.1.3",
    "@zeit/next-css": "^1.0.1",
    "apollo-cache-inmemory": "1.6.5",
    "apollo-client": "2.6.8",
    "apollo-link-http": "^1.5.16",
    "apollo-server": "^2.11.0",
    "apollo-server-express": "^2.11.0",
    "apollo-server-micro": "^2.11.0",
    "body-parser": "^1.19.0",
    "dayjs": "^1.8.23",
    "dotenv": "^8.2.0",
    "es6-promise": "^4.2.8",
    "escape-html": "^1.0.3",
    "express": "^4.17.1",
    "fs": "^0.0.1-security",
    "glob": "^7.1.6",
    "graphql": "^14.6.0",
    "graphql-tag": "2.10.3",
    "helmet": "^3.22.0",
    "ioredis": "^4.16.1",
    "isomorphic-fetch": "^2.2.1",
    "isomorphic-unfetch": "^3.0.0",
    "leaflet": "^1.6.0",
    "lodash": "^4.17.15",
    "merge-graphql-schemas": "^1.7.6",
    "next": "^9.3.2",
    "next-connect": "^0.6.1",
    "next-offline": "^5.0.0",
    "next-with-apollo": "^5.0.0",
    "pg": "^7.18.2",
    "prop-types": "^15.7.2",
    "qs": "^6.9.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-leaflet": "^2.6.3",
    "react-render-html": "^0.6.0",
    "sequelize": "^5.21.5",
    "sequelize-cli": "^5.5.1",
    "sequelize-transparent-cache": "^2.2.3",
    "sequelize-transparent-cache-ioredis": "^2.2.3",
    "slate": "^0.57.1",
    "styled-components": "^5.0.1",
    "typed.js": "^2.0.11"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "babel-plugin-styled-components": "^1.10.7",
    "jasmine": "^3.5.0",
    "nodemon": "^2.0.2",
    "standard": "^14.3.3"
  }
}
